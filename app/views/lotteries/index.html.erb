<div class="page-header">
  <h1>
    All Lotteries
    <!-- <a href="/lotteries/new" class="btn btn-lg btn-success">New Lottery</a> -->
  </h1>
</div>

<% @thismonth = Date.today.strftime("%m") %>

<% @current_lottery = @lotteries.transaction.select { |item| item.id == @thismonth} %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Lottery #</th>
        <th>Total # of Entries</th>
        <th>Current Winning Pool</th>
        <th>Your Chances</th>
      </tr>

      <% @lotteries.each do |lottery| %>
      <tr>
        <td><%= lottery.id %></td>

        <td>
        </td>

        <td>
          <% @monthly_winnings = 0 %>
          <% @current_lottery.each do |thing| %>
          <% @monthly_winnings = @monthly_winnings + thing.amount %>
          <% end %>
          <%= @monthly_winnings %>
        </td>

      <td><%= lottery.raffle_number %></td>
      <td><%= lottery.date %></td>

        <!-- <a href="/lotteries/<%= lottery.id %>" class="btn btn-primary">Show</a>
        <a href="/lotteries/<%= lottery.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_lottery/<%= lottery.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->

    </tr>
    <% end %>
  </table>
</div>
</div>
