<div class="page-header">
  <h1>
    Lotteries
    <a href="/lotteries/new" class="btn btn-lg btn-success">New Lottery</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Transactions</th>
        <th>User</th>
        <th>Amount</th>
        <th>Raffle number</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @lotteries.each do |lottery| %>
      <tr>
        <td><%= lottery.transactions_id %></td>
        <td><%= lottery.user_id %></td>
        <td><%= lottery.amount %></td>
        <td><%= lottery.raffle_number %></td>
        <td><%= lottery.date %></td>
        <td>
          <a href="/lotteries/<%= lottery.id %>" class="btn btn-primary">Show</a>
          <a href="/lotteries/<%= lottery.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_lottery/<%= lottery.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
